<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:s="using:DiagramDesigner"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DiagramDesigner.DiagramControl"
			 x:DataType="s:DiagramViewModel">

	<UserControl.Resources>
		
		<s:DiagramControlTemplateSelector
			x:Key="designerItemTemplateSelector"
			DesignerItemTemplate="{StaticResource designerItemTemplate}"
			ConnectionTemplate="{StaticResource connectionTemplate}"/>
		
	</UserControl.Resources>

	<LayoutTransformControl>
		<ItemsControl ItemsSource="{Binding Items}"
					  ItemTemplate="{StaticResource designerItemTemplateSelector}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<s:DesignerCanvas Background="White"
									  Width="{Binding Option.Width}"
									  Height="{Binding Option.Height}">
					</s:DesignerCanvas>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ItemsControl.Styles>
				<Style Selector="ContentPresenter" x:DataType="s:SelectableDesignerItemViewModelBase">
					<Setter Property="Canvas.Left" Value="{Binding Left}"/>
					<Setter Property="Canvas.Top" Value="{Binding Top}"/>
					<Setter Property="ZIndex" Value="{Binding ZIndex}"/>
					<Setter Property="ClipToBounds" Value="False"/>
				</Style>
			</ItemsControl.Styles>
		</ItemsControl>
		
		<LayoutTransformControl.LayoutTransform>
			<ScaleTransform ScaleX="{Binding Option.ZoomValue}" ScaleY="{Binding Option.ZoomValue}"/>
		</LayoutTransformControl.LayoutTransform>
	</LayoutTransformControl>

</UserControl>
